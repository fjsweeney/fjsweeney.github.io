#lang racket

(require css-expr)

(define main-purple  '|#a0a|)
(define half-purple  '|#808|)
(define dark-purple  '|#480048|)
(define light-purple '|#c0c|)

(define black '|#222|)
(define gray  '|#666|)
(define white '|#ccc|)
;(define white '|rgba(255,255,255,0.5)|)

(define main-green  '|#0a0|)
(define half-green  '|#080|)
(define light-green '|#0c0|)
(define dark-green  '|#004800|)

(define style
  `(
    [* #:box-sizing 'border-box]
    [body
     #:margin (40px auto)
     #:max-width 650px
     #:lineheight 1
     #:font-size 18px
     #:color ,main-purple
     #:background-color ,black
     #:padding (0 10px)
     #:font-family |Calibri, Verdana, sans-serif|]
    
    [header .resume-item footer .resume-accordion
     #:background-color ,dark-purple
     #:border-radius 20px
     #:padding (15px 15px 15px 5px)
     #:margin (15px 0 15px 0)]

    [a
     #:color ,main-green
     #:text-decoration none]
    [a:visited
     #:color ,half-green]
    [a:hover
     #:color ,light-green
     #:text-decoration none]
    [.nav-item
     #:margin-right 10px]

    [.accordion
     #:background-color ,dark-green
     #:color ,main-green]
    [.accordion:hover
     #:background-color ,half-green]
    [.accordion.active
     #:background-color ,dark-purple
     #:color ,main-purple]
    [.accordion.active:hover
     #:background-color ,half-purple]
    [.accordion:after
     #:content "+"
     #:float right]
    [.accordion.active:after
     #:content "-"
     #:float right]
    [.accordion-panel
     #:overflow hidden
     #:transition (0.4s ease-in-out)
     #:opacity 0
     #:max-height 0]
    [.accordion-panel.show
     #:opacity 1
     #:max-height none]
    ))
  
(define css
 (string->bytes/utf-8
  (css-expr->css
   (css-expr ,@style))))

(define file (open-output-file "../stylesheets/main.css" #:exists 'replace))
(write-bytes css file)
(close-output-port file)


